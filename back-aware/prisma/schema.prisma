generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String?
  name      String?
  bio            String?
  language       String?
  country        String?
  favoriteTopics String[] // Assumes you're using PostgreSQL
  createdAt     DateTime @default(now())
  profilePhoto   String?
  bannerPhoto    String?
  provider String?
}
